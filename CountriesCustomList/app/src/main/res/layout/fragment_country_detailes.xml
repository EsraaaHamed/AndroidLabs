<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/countryDetailesContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountryDetailesFragment"
    android:background="#fdfaf2">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rankHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Rank :"
                android:textColor="#4d826e"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/countryRankTxt"
                android:layout_width="108dp"
                android:layout_height="26dp"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Country Rank"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/rankHeader"
                app:layout_constraintTop_toTopOf="@+id/rankHeader" />

            <TextView
                android:id="@+id/countryNameHeader"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:text="Name :"
                android:textColor="#88001b"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rankHeader" />

            <TextView
                android:id="@+id/countryNameTxt"
                android:layout_width="140dp"
                android:layout_height="29dp"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Country Name"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.223"
                app:layout_constraintStart_toEndOf="@+id/countryNameHeader"
                app:layout_constraintTop_toBottomOf="@+id/countryRankTxt" />

            <TextView
                android:id="@+id/countryPopulationHeader"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginTop="40dp"
                android:text="Population"
                android:textColor="#88001b"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countryNameHeader" />

            <TextView
                android:id="@+id/countryPopulationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Country Popultaion "
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintStart_toEndOf="@+id/countryPopulationHeader"
                app:layout_constraintTop_toBottomOf="@+id/countryNameTxt" />

            <TextView
                android:id="@+id/countryImageHeader"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:layout_marginTop="52dp"
                android:text="Country Image :"
                android:textColor="#88001b"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countryPopulationHeader" />

            <ImageView
                android:id="@+id/countryImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/countryImageHeader"
                app:layout_constraintTop_toBottomOf="@+id/countryPopulationTxt"
                tools:src="@tools:sample/avatars[11]" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>